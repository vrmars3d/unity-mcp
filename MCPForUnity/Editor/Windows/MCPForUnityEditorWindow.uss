/* Root Container */
#root-container {
    padding: 16px;
    flex-shrink: 1;
    overflow: hidden;
}

/* Title */
.title {
    font-size: 20px;
    -unity-font-style: bold;
    margin-bottom: 20px;
    padding: 12px;
    background-color: rgba(0, 0, 0, 0.1);
    border-radius: 4px;
}

.section-stack {
    flex-direction: column;
}
